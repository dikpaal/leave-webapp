@page
@model leave_webapp.Pages.LeaveApplications.CreateModel
@{
    ViewData["Title"] = "Create Leave Application";
}

<h2>Create Leave Application</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="LeaveApplication.EmployeeId"></label>
        <input asp-for="LeaveApplication.EmployeeId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LeaveApplication.FirstName"></label>
        <input asp-for="LeaveApplication.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LeaveApplication.LastName"></label>
        <input asp-for="LeaveApplication.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LeaveApplication.Email"></label>
        <input asp-for="LeaveApplication.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LeaveApplication.Message"></label>
        <input asp-for="LeaveApplication.Message" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LeaveApplication.Date"></label>
        <input asp-for="LeaveApplication.Date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

